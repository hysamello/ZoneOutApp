<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paretRegisterPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004369">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/think2" />


    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="144dp"
        android:layout_height="74dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/paretRegisterPage"
        app:layout_constraintVertical_bias="0.182"
        app:srcCompat="@drawable/zoneoutescrito" />


    <LinearLayout
        android:id="@+id/infoRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="15dp"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16"
        app:layout_constraintVertical_bias="0.081">


        <EditText
            android:id="@+id/username_register"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_field"
            android:backgroundTint="#ADDCDE"
            android:drawableLeft="@drawable/baseline_person_black_24dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15"
            app:layout_constraintEnd_toEndOf="@+id/imageView15"
            app:layout_constraintStart_toStartOf="@+id/imageView15"
            app:layout_constraintTop_toBottomOf="@+id/imageView16"
            app:layout_constraintVertical_bias="0.089" />

        <EditText
            android:id="@+id/email_register"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_field"
            android:backgroundTint="#ADDCDE"
            android:drawableLeft="@drawable/baseline_email_black_24dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15"
            app:layout_constraintEnd_toEndOf="@+id/imageView15"
            app:layout_constraintStart_toStartOf="@+id/imageView15"
            app:layout_constraintTop_toBottomOf="@+id/username_register"
            app:layout_constraintVertical_bias="0.046" />

        <EditText
            android:id="@+id/password_register"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_field"
            android:backgroundTint="#ADDCDE"
            android:drawableLeft="@drawable/baseline_lock_black_24dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15"
            app:layout_constraintEnd_toEndOf="@+id/imageView15"
            app:layout_constraintStart_toStartOf="@+id/imageView15"
            app:layout_constraintTop_toBottomOf="@+id/email_register"
            app:layout_constraintVertical_bias="0.035" />

        <EditText
            android:id="@+id/passwordConfirm_register"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_field"
            android:backgroundTint="#ADDCDE"
            android:drawableLeft="@drawable/baseline_lock_black_24dp"
            android:ems="10"
            android:hint="Password Confirmation"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15"
            app:layout_constraintEnd_toEndOf="@+id/imageView15"
            app:layout_constraintStart_toStartOf="@+id/imageView15"
            app:layout_constraintTop_toBottomOf="@+id/password_register"
            app:layout_constraintVertical_bias="0.091" />

        <Button
            android:id="@+id/signinBtn_register"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:backgroundTint="@animator/button_color"
            android:enabled="false"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15"
            app:layout_constraintEnd_toEndOf="@+id/imageView15"
            app:layout_constraintStart_toStartOf="@+id/imageView15"
            app:layout_constraintTop_toBottomOf="@+id/passwordConfirm_register"
            app:layout_constraintVertical_bias="0.112" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>